<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlexGoldCard"
    android:visibility="visible">


    <Button
        android:id="@+id/register_button_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_close" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/selectImage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_circular_delete"
                android:text="SELECT IMAGE"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/selectImage"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/create_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/previewImage"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/model"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/create_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_model"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/price"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_model"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/create_price"
                android:text="Cup"
                android:textColor="@color/background_white"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/create_carats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_price"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/carats"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_price"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/create_carats"
                android:text="Kilates(Kt)"
                android:textColor="@color/background_white"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/create_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_carats"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/weight"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_carats"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/create_weight"
                android:text="Kilogramos(Kg)"
                android:textColor="@color/background_white"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/create_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_weight"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/large"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_weight"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/create_weight"
                android:text="CentÃ­metros (Cm)"
                android:textColor="@color/background_white"
                android:textSize="18dp"

                />

            <EditText
                android:id="@+id/create_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_large"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:hint="Cantidad"
                android:padding="10dp"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_large"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/create_count"
                android:text="@string/jewel_available"
                android:textColor="@color/background_white"
                android:textSize="18dp"

                />


            <EditText
                android:id="@+id/create_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_count"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/background_white"
                android:textColorHint="@color/background_grey" />


        </RelativeLayout>


    </ScrollView>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_circular_shape"
        android:text="@string/create_jewel"
        android:textColor="@color/background_white"
        android:textSize="10dp" />
    <ProgressBar
        android:id="@+id/swipeRefresh"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


</RelativeLayout>





