<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlexGoldBackground">

    <ProgressBar
        android:id="@+id/swipeRefresh"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAlexGoldBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buy_button_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_close" />


            <TextView
                android:id="@+id/label_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buy_button_back"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_alex_gold_login_username"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buy_button_back"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_username"
                android:textColor="@color/background_white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/label_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_username"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_alex_gold_phone"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_username"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_phone"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_date_compromised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_phone"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:text="@string/date_compromised"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_date_compromised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_phone"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_date_compromised"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_date_saled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_date_compromised"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:text="@string/date_updated"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_date_saled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_date_compromised"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_date_saled"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/jewel_to_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_date_saled"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:text="@string/jewel_to_buy"
                android:textColor="@color/background_white"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jewel_to_buy"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="@color/colorBlack"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/image_jewel"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/button_profile_foreground" />


                    <TextView
                        android:id="@+id/details_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_jewel"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:text="Ale"
                        android:textColor="@color/background_white"
                        android:textSize="14dp" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/relative_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_text_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count_jewel_pcs"
                    android:textColor="@color/background_white"
                    android:textSize="14dp"

                    />


                <TextView
                    android:id="@+id/details_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/details_text_less"
                    android:drawableRight="@drawable/ic_less" />


                <TextView
                    android:id="@+id/details_count_pcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/details_less"
                    android:text="0"
                    android:textColor="@color/background_white" />

                <TextView
                    android:id="@+id/details_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/details_count_pcs"
                    android:drawableLeft="@drawable/ic_plus"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_count"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_circular_shape"
                    android:padding="5dp"
                    android:text="@string/confirm_buy"
                    android:textColor="@color/background_white"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btn_sale_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/btn_buy"
                    android:background="@drawable/rounded_circular_disabled"
                    android:padding="5dp"
                    android:text="@string/cancel_buy"
                    android:textColor="@color/background_white"
                    android:textSize="10dp" />


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>



