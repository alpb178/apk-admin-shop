<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/register_button_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_close"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button_back"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:text="@string/select_vendor"
        android:textColor="@color/colorAlexGoldYellow"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/toolbar_alex_gold_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_header"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_find_alex_gold_list"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="@string/insert_username"
            android:textColor="@color/background_white"
            android:textColorHint="@color/colorAlexGoldPlaceHolder" />

        <Button
            android:id="@+id/fab_find_alex_gold_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/text_find_alex_gold_list"
            android:layout_marginTop="10dp"
            android:background="@mipmap/button_search_round" />

        <Button
            android:id="@+id/btn_create_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fab_find_alex_gold_list"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_circular_shape_transparent"
            android:padding="10dp"
            android:text="Crear Vendedor"
            android:visibility="gone"
            android:textColor="@color/background_white"
            android:textSize="10dp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_Not_Jewel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/background_black"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/alex_gold_empty_data"
            android:textColor="@color/md_grey_300"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshAlexGoldListVendor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_alex_gold_list"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/background_black">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_alex_gold_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/background_black"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>




