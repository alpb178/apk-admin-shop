<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/swipeRefreshAlexGoldList"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_splash"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_splash"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/splash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Administrador"
            android:textColor="@color/background_white"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_login_username"
            android:drawablePadding="10dp"
            android:ems="5"
            android:hint="@string/login_username"
            android:textColor="@color/background_white"
            android:textColorHint="@color/colorAlexGoldPlaceHolder"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/ic_login_password"
            android:drawablePadding="10dp"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:textColor="@color/background_white"
            android:textColorHint="@color/colorAlexGoldPlaceHolder"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:text="@string/forget_password"
            android:textColor="@color/background_white"
            android:textSize="10dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_circular_shape"
        android:padding="10dp"
        android:text="@string/text_alex_gold_login"
        android:textColor="@color/background_white"
        android:textSize="8dp" />

</RelativeLayout>