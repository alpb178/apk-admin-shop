<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_alex_gold_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:backgroundTint="@color/colorAlexGoldCard"
    android:elevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_jewel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/splash"
                app:civ_border_color="@color/colorAlexGoldBackground"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_jewel_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="Cadena"
                    android:textColor="@color/background_white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_jewel_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_jewel_model"
                    android:layout_margin="5dp"
                    android:gravity="bottom"
                    android:text="60005"
                    android:textColor="@color/background_white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/text_jewel_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_jewel_code"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/ic_money"
                    android:text="2000"
                    android:textColor="@color/background_white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/count_pcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_jewel_weight"
                    android:layout_margin="5dp"
                    android:text="@string/count_pcs"
                    android:textColor="@color/background_white"
                    android:textSize="14dp" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_jewel_delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_circular_delete"
                android:text="@string/jewel_eliminated"
                android:visibility="gone"
                android:textColor="@color/background_white"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_jewel_update"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_circular_disabled"
                android:text="Editar Joya"
                android:textColor="@color/background_white"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_jewel_pending"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_circular_shape"
                android:text="@string/jewel_pending"
                android:textColor="@color/background_white"
                android:textSize="8dp"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"
        android:backgroundTint="@color/colorAlexGoldBackground" />

</androidx.cardview.widget.CardView>