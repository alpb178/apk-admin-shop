<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlexGoldBackground"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/swipeRefresh"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/button_profile_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_close"
                android:visibility="gone" />


            <TextView
                android:id="@+id/label_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_profile_back"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_alex_gold_name"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/login_username"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_username"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_username"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:text="@string/text_alex_gold_email"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/label_profile_username"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_email"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_email"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_alex_gold_phone"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_email"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_phone"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/label_profile_rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_phone"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="@string/text_alex_gold_rol"
                android:textColor="@color/colorAlexGoldPlaceHolder"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_rol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_profile_phone"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/label_profile_rol"
                android:textColor="@color/background_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/profile_blocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_rol"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="45dp"
                android:text="Bloquear"
                android:textColor="@color/background_white"
                android:textSize="16dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/profile_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_blocked"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/rounded_circular_shape"
                android:padding="10dp"
                android:text="@string/record_sale"
                android:textColor="@color/background_white"
                android:textSize="10dp"
                android:visibility="gone" />


        </RelativeLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_circular_shape"
            android:padding="10dp"
            android:visibility="gone"
            android:text="Eliminar Vendedor"
            android:textColor="@color/background_white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/edit_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_circular_disabled"
            android:padding="10dp"
            android:text="@string/edit_user"
            android:textColor="@color/background_white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/close_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_circular_delete"
            android:padding="10dp"
            android:text="@string/close_session"
            android:textColor="@color/background_white"
            android:textSize="10dp" />

    </LinearLayout>


</RelativeLayout>

